<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:OneHub.Tools.HeapView"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OneHub.Tools.HeapView.MainWindow"
        Title="Heap View">
	<Grid RowDefinitions="*, Auto, *">
		<TreeDataGrid Name="heapTree" Grid.Row="0" />
		<GridSplitter Grid.Row="1" Background="Gray" ResizeDirection="Rows" />
		<StackPanel Grid.Row="2">
			<TextBlock Text="Retainers:" Margin="4,8,8,8" />
			<TreeDataGrid Name="retainersTree" />
		</StackPanel>
	</Grid>
</Window>
